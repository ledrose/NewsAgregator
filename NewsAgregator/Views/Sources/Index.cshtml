@model IEnumerable<NewsAgregator.Models.Source>;    
@{
    ViewData["Title"] = "Index";
}

<div class="container p-3" >
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Список каналов</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" asp-controller="Sources" class="btn btn-primary">Добавить новый канал</a>
        </div>
    </div>

    <br/><br/>

    @if (Model.Count()>0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <td>Имя</td>
                    <td>Тип</td>
                    <td>Канал rss или телеграмма</td>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="20%">@obj.Name</td>
                        <td width="60%">@obj.Type.ToString()</td>
                        <td width="60%">@obj.Link</td>
                        <td width="30%">
                            <div class="btn-group w-75" role="group">
                                <a asp-action="Edit" asp-route-Id="@obj.Name" asp-controller="Sources" class="btn btn-primary mx-2">
                                    Редактировать
                                </a>
                                <a asp-action="Delete" asp-route-Id="@obj.Name" asp-controller="Sources" class="btn btn-danger mx-2">
                                    Удалить
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    } 
    else
    {
        <p>Каналов нету</p>
    }
</div>

